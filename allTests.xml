<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "allTests">
    <test name = "testing of default interface">
        <classes>
            <class name = "appiumTests.interfaceTest"/>
        </classes>
    </test>
    <test name = "testing of functionality (positive cases)">
        <classes>
            <class name = "appiumTests.functionalityTestPositive"/>
        </classes>
    </test>
    <test name = "testing of functionality (negative cases)">
        <classes>
            <class name = "appiumTests.functionalityTestNegative"/>
        </classes>
    </test>
</suite>